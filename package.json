{
  "name": "boilerplate-node",
  "version": "1.0.0",
  "description": "boilerplate node com typescript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc",
    "postinstall": "husky install",
    "dev": "tsx watch ./src/server.ts",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint -- --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhiz/template-node.git"
  },
  "keywords": [],
  "author": "Guilherme-Vilela",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhiz/template-node/issues"
  },
  "homepage": "https://github.com/guilhiz/template-node#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.10.0",
    "string-strip-html": "^13.2.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chalk": "^5.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
